		{
			"name": "Get Books by Type",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200)\r",
							"});\r",
							"\r",
							"const res = pm.response.json();\r",
							"\r",
							"// get first avaiable book from res and set as globla var 'bookId'\r",
							"const bookList = res.filter((book) => book.available === true);\r",
							"const book = bookList[0];\r",
							"\r",
							"pm.test(\"Book Found\", () => {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.be.true;\r",
							"    pm.expect(book.type).to.eql('non-fiction');\r",
							"});\r",
							"\r",
							"if(book) {\r",
							"    //pm.globals.set(\"bookId\", bookList[0].id);\r",
							"    //pm.environment.set(\"bookId\", bookList[0].id);\r",
							"    pm.collectionVariables.set(\"bookId\", bookList[0].id);\r",
							"}\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
